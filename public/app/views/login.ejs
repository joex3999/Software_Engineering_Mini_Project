<%include _header1 %>
	<div class="page-header">
		<h1> User Login </h1></div>

	<form action="/login" method="POST">


		<label> Username: </label>
		<input class="form-control" type="text" name="username" placeholder="please enter username " ng-model="register.regData.username">
		<br>
		<hr>


		<label> Password: </label>
		<input class="form-control" type="password" name="password" place holder="please enter password" ng-model="register.regData.password">
		<br>
		<hr>

		<button class="btn btn-primary" type="submit"> Login </button>



	</form>

	<%if(variab){%>
		<div class="row show-hide-message">

			<div class="alert alert-danger">
				<h4> Please Refill all the parameters correctly </h4>
			</div>
		</div>
		<%}%>

			<%if(errors.length>0){%>
				<div class="row show-hide-message">

					<div class="alert alert-danger">
						<h4> <%= errors%> </h4>
					</div>
				</div>
				<%}%>


